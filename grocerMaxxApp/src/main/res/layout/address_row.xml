<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <RelativeLayout
         android:id="@+id/layout_address_info"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_marginTop="10dp"
         android:visibility="visible"
         android:layout_marginBottom="5dp"
         android:background="@drawable/my_address_view" >

         <RelativeLayout 
             android:id="@+id/rl_addr_name"
             android:layout_width="match_parent"
             android:layout_height="30dp"   
             android:background="@drawable/address_top" >
             
         <TextView 
             android:id="@+id/text_header"
             android:layout_width="match_parent"
             android:layout_height="30dp"
             android:layout_centerVertical="true"
             android:gravity="center_vertical" 
             android:text="abhgg"
             android:textColor="@color/white"
             android:layout_toLeftOf="@+id/editaddress"
             android:layout_alignParentLeft="true"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:textSize="@dimen/text_size_12"  />
         
         <ImageView
		    android:id="@+id/editaddress"
		    android:layout_width="15dp"
		    android:layout_height="20dp"
		    android:layout_marginRight="10dp"
		    android:layout_toLeftOf="@+id/deleteAddress"
		    android:layout_centerVertical="true"
		    android:src="@drawable/edit_address" />
         
		 <ImageView
		    android:id="@+id/deleteAddress"
		    android:layout_width="15dp"
		    android:layout_height="20dp"
		    android:layout_marginLeft="10dp"
		    android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/deletewhite" 
            android:layout_centerVertical="true" />
         
    </RelativeLayout>
         
         <TextView 
             android:id="@+id/name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Abhishek Yadav"
             android:paddingLeft="10dp"
             android:paddingTop="15dp"
             android:textColor="#121212"
             android:layout_below="@+id/rl_addr_name"
             android:textSize="@dimen/text_size_11" />
         
         <TextView 
             android:id="@+id/phone"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="5, Nathupur Road"
             android:paddingLeft="10dp"
             android:paddingTop="10dp"
             android:layout_below="@+id/name"
             android:textColor="#121212"
             android:textSize="@dimen/text_size_11" />
         
          <TextView 
             android:id="@+id/address1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Gurgaon"
             android:paddingLeft="10dp"
             android:paddingTop="10dp"
             android:layout_below="@+id/phone"
             android:textColor="#121212"
             android:textSize="@dimen/text_size_11" />
          
           <TextView 
             android:id="@+id/city"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="India"
             android:paddingLeft="10dp"
             android:paddingTop="10dp"
             android:layout_below="@+id/address1"
             
             android:textColor="#121212"
             android:textSize="@dimen/text_size_11" />
           
           <TextView 
             android:id="@+id/state"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="100064"
             android:paddingLeft="10dp"
             android:paddingTop="10dp"
             android:textColor="#121212"
             android:layout_below="@+id/city"
             android:textSize="@dimen/text_size_11" />
           
           <TextView 
             android:id="@+id/country"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="100064"
             android:paddingLeft="10dp"
             android:paddingTop="10dp"
             android:textColor="#121212"
             android:layout_below="@+id/state"
             android:textSize="@dimen/text_size_11" />
           
           <TextView 
             android:id="@+id/pincode"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="100064"
             android:paddingLeft="10dp"
             android:paddingTop="10dp"
             android:paddingBottom="5dp"
             android:textColor="#121212"
             android:layout_below="@+id/country"
             android:textSize="@dimen/text_size_11" />
         
     </RelativeLayout>
    
</LinearLayout>
