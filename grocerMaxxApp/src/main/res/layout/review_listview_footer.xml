<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:gravity="right"
    android:padding="15dp"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:shrinkColumns="1" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Billing Amount:"
                android:textColor="@color/text_grey"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/billing_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                 android:layout_weight="1"
                 android:gravity="right"
                android:textSize="@dimen/text_size_16" />
        </TableRow>

        <TableRow
             android:id="@+id/tr_shipping"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping Amount:"
                android:layout_marginRight="10dp"
                android:textColor="@color/text_grey"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_16"/>

            <TextView
                android:id="@+id/shipping_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rs. 0.00"
                android:textColor="#000000"
                android:gravity="right"
                android:textSize="@dimen/text_size_16" />
        </TableRow>

        <TableRow
             android:id="@+id/tr_discount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="Discount:"
                android:textColor="@color/text_grey"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_16"/>

            <TextView
                android:id="@+id/tax"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Rs. 0.00"
                android:textColor="#000000"
                 android:layout_weight="1"
                 android:gravity="right"
                android:textSize="@dimen/text_size_16" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="Grand Total:"
                android:textColor="@color/text_grey"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_16"/>

            <TextView
                android:id="@+id/grand_total"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                 android:layout_weight="1"
                 android:gravity="right"
                android:textSize="@dimen/text_size_16" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="You Save:"
                android:textColor="@color/text_grey"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_16"/>

            <TextView
                android:id="@+id/you_save"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                 android:layout_weight="1"
                 android:gravity="right"
                android:textSize="@dimen/text_size_16" />
        </TableRow>
    </TableLayout>

</LinearLayout>
