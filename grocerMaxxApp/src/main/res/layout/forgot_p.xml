<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom_font="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical" >

    <include
        android:id="@+id/header"
        layout="@layout/mart_header_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_dark"
        android:visibility="gone"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="FORGOT PASSWORD"
            style="@style/headerGrey"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="@string/forgot_password_header_support"
            android:textColor="@color/text_grey"
            android:textSize="12sp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background"
        android:orientation="vertical" >
        
        
        <TextView 
            android:id="@+id/tv_heading_forgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:visibility="gone"
	        android:textColor="@color/pallete_black"
	        android:textSize="@dimen/text_size_16"
            android:text="Forgot Password" />
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
	        android:orientation="vertical"
	        android:background="@color/white" >

        
        
        <RelativeLayout 
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:visibility="visible"
            android:padding="8dp">
                 
               <TextView 
                   android:id="@+id/left_line_first_name"
                   android:layout_width="1dp"
                   android:layout_height="5dp"
                   android:layout_marginTop="38dp"
               	   android:background="@color/register_address_line_color" />
               
                <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:gravity="center_vertical"
		            android:orientation="horizontal"
                    >
	            
	                <EditText
	                    android:id="@+id/email_id"
	                    android:layout_width="0dp"
	                    android:layout_height="35dp"
	                    android:layout_weight="1"
	                    android:background="@null"
	                    android:paddingTop="10dp"
	                    android:textColorHint="@color/light_Gray"
	                    android:singleLine="true"
	                    android:hint="@string/Email"
			            android:imeOptions="actionDone"
			            android:inputType="textEmailAddress"
	                    android:textSize="@dimen/text_size_12">
	                    <requestFocus />
	                     </EditText>
                
        		</LinearLayout>
               
               <TextView 
                   android:id="@+id/middle_line_first_name"
                   android:layout_width="match_parent"
	               android:layout_height="1dp"
	               android:layout_marginTop="42dp"
	               android:layout_toRightOf="@+id/tv"
	               android:background="@color/register_address_line_color"  />
               
               <TextView 
                   android:id="@+id/right_line_first_name"
                   android:layout_width="1dp"
                   android:layout_height="5dp"
                   android:layout_marginTop="38dp"
                   android:layout_alignParentRight="true"
               	   android:background="@color/register_address_line_color"  />
               
             </RelativeLayout>
             
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:gravity="left"
            android:singleLine="true"
            android:text="@string/forgot_password_header_support"
            android:textColor="@color/light_Gray"
            android:textSize="@dimen/text_size_14" />
        

        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/cart_place_order"
            android:text="SUBMIT"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18" />
        
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>