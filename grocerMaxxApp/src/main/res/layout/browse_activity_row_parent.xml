<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:paddingBottom="2dp"
    android:paddingRight="10dp"
    android:paddingTop="-2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/transparent"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/item_name_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/img_arrow_parent"
            android:background="@color/transparent"
            android:paddingLeft="5dp"
            android:text="Category heading"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sixteen_text" />

        <ImageView
            android:id="@+id/img_arrow_parent"
            android:layout_width="14dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/drawer_plus"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/img_arrow_parent_minus"
            android:layout_width="14dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/drawer_minus"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:id="@+id/line_parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ebebeb"
        android:visibility="gone" />

</LinearLayout>
