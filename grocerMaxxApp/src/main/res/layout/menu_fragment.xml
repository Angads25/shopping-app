<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawer_bg"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/drawerlogo"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:padding="@dimen/ten_dp">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/ten_dp"
                android:paddingRight="@dimen/ten_dp"
                android:src="@drawable/home"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginLeft="@dimen/ten_dp"
                android:text="Home"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/fourteen_text" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginBottom="@dimen/ten_dp"
            android:background="#9b8f8c" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image1"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:paddingBottom="@dimen/ten_dp"
            android:src="@drawable/locationdrawer" />

        <TextView
            android:id="@+id/txvSelectLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image1"
            android:text="Gurgaon"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/thirteen_text" />

            <ImageView
                android:id="@+id/ivLocation"
                android:layout_alignParentRight="true"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:paddingBottom="@dimen/ten_dp"
                android:src="@drawable/draweredit" />

            </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/grey_view"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txvShopByCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/ten_dp"
            android:layout_marginLeft="@dimen/twenty_dp"
            android:text="S&#160;H&#160;O&#160;P&#160;&#160; B&#160;Y&#160;&#160; C&#160;A&#160;T&#160;E&#160;G&#160;O&#160;R&#160;I&#160;E&#160;S"
            android:textColor="@color/white"
            android:alpha="0.7"
            android:textSize="@dimen/twelveScaled" />

        <View
            android:id="@+id/div1"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginBottom="@dimen/five_dp"
            android:background="@color/grey_view" />

        <ListView
            android:id="@+id/lstMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/twentyfour"
            android:divider="@null"
            android:paddingBottom="@dimen/ten_dp" />

        <View
            android:id="@+id/div2"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginBottom="@dimen/five_dp"
            android:background="@color/grey_view" />

        <TextView
            android:id="@+id/txvShopByDeals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten_dp"
            android:layout_marginLeft="@dimen/twenty_dp"
            android:alpha="0.7"
            android:layout_marginTop="2dp"
            android:text="S&#160;H&#160;O&#160;P&#160;&#160; B&#160;Y&#160;&#160; D&#160;E&#160;A&#160;L&#160;S"
            android:textColor="@color/white"
            android:textSize="@dimen/twelveScaled" />

        <View
            android:id="@+id/div3"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginBottom="@dimen/ten_dp"
            android:background="@color/grey_view" />

        <ListView
            android:id="@+id/lstShopByDealsMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:layout_marginLeft="@dimen/twentyfour"
            android:paddingBottom="@dimen/ten_dp"
            android:visibility="gone" />

        <View
            android:id="@+id/div4"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginBottom="@dimen/five_dp"
            android:background="@color/grey_view"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txvGetInTouch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten_dp"
            android:layout_marginLeft="@dimen/twenty_dp"
            android:text="G&#160;E&#160;T&#160;&#160; I&#160;N&#160;&#160; T&#160;O&#160;U&#160;C&#160;H&#160;&#160; W&#160;I&#160;T&#160;H&#160;&#160; U&#160;S&#160;"
            android:textColor="@color/white"
            android:alpha="0.7"
            android:textSize="@dimen/twelveScaled" />

        <View
            android:id="@+id/div5"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:visibility="gone"
            android:background="@color/grey_view" />

        <TextView
            android:id="@+id/txvLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten_dp"
            android:layout_marginLeft="@dimen/twenty_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:text="P&#160;I&#160;C&#160;K&#160;&#160; Y&#160;O&#160;U&#160;R&#160;&#160; C&#160;I&#160;T&#160;Y"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:alpha="0.7"
            android:visibility="gone"
            android:textSize="@dimen/twelveScaled" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/grey_view" />

        <ExpandableListView
            android:id="@+id/expLstMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:groupIndicator="@null"
            android:visibility="gone" />


    </LinearLayout>
</ScrollView>