<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawer_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/ten_dp">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/home"
                android:paddingLeft="@dimen/ten_dp"
                android:paddingRight="@dimen/ten_dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ten_dp"
                android:text="Home"
                android:textColor="@color/grey_dark"
                android:textSize="@dimen/fourteen_text" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginBottom="@dimen/ten_dp"
            android:background="@color/grey_view" />

        <TextView
            android:id="@+id/txvShopByCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten_dp"
            android:layout_marginLeft="@dimen/ten_dp"
            android:text="SHOP BY CATEGORIES"
            android:textColor="#CDCDCD"
            android:textSize="@dimen/fourteen_text" />

        <View
            android:id="@+id/div1"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginBottom="@dimen/five_dp"
            android:background="@color/grey_view" />

        <ListView
            android:id="@+id/lstMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"/>
        <View
            android:id="@+id/div2"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginBottom="@dimen/five_dp"
            android:background="@color/grey_view" />

        <TextView
            android:id="@+id/txvShopByDeals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="@dimen/ten_dp"
            android:text="SHOP BY DEALS"
            android:textColor="#CDCDCD"
            android:textSize="@dimen/fourteen_text" />

        <View
            android:id="@+id/div3"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginBottom="@dimen/ten_dp"
            android:background="@color/grey_view" />

        <ListView
            android:id="@+id/lstShopByDealsMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:visibility="gone" />
        <View
            android:id="@+id/div4"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginBottom="@dimen/five_dp"
            android:background="@color/grey_view"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txvGetInTouch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten_dp"
            android:text="GET IN TOUCH WITH US"
            android:textColor="#CDCDCD"
            android:textSize="@dimen/fourteen_text" />


        <ExpandableListView
            android:id="@+id/expLstMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:groupIndicator="@null"
            android:visibility="gone" />


    </LinearLayout>
</ScrollView>