<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawer_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/ten_dp">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/drawer_back" />

            <TextView
                android:id="@+id/txvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ten_dp"
                android:text="Home"
                android:textColor="@color/grey_dark"
                android:textSize="@dimen/sixteen_text" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginBottom="@dimen/ten_dp"
            android:background="@color/grey_view" />

        <TextView
            android:id="@+id/txvShopByCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="@dimen/ten_dp"
            android:text="Shop By Categories"
            android:textColor="@color/grey_dark"
            android:textSize="@dimen/sixteen_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginBottom="@dimen/ten_dp"
            android:background="@color/grey_view" />

        <ListView
            android:id="@+id/lstMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/txvShopByDeals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:text="Shop By Deals"
            android:textColor="@color/grey_dark"
            android:textSize="@dimen/sixteen_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginBottom="@dimen/ten_dp"
            android:background="@color/grey_view" />

        <ListView
            android:id="@+id/lstShopByDealsMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txvGetInTouch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten_dp"
            android:text="Get in touch with us"
            android:textColor="@color/grey_dark"
            android:textSize="@dimen/sixteen_text" />


        <ExpandableListView
            android:id="@+id/expLstMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:groupIndicator="@null"
            android:visibility="gone" />


    </LinearLayout>
</ScrollView>