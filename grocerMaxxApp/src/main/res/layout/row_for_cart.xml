                                android:visibility="visible" />
                        </LinearLayout>
    -->
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/tv_saving_free"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="0dp"
                        android:layout_toRightOf="@+id/mrp"
                        android:background="@drawable/saving_bg"
                        android:gravity="center"
                        android:paddingBottom="4dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="4dp"
                        android:singleLine="true"
                        android:text="SAVING Rs. 2"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_offers_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DFEDFD"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="19dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/bell" />

            <TextView
                android:id="@+id/tv_offers_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_prod_list_cart"
                android:gravity="center"
                android:padding="5dp"
                android:text="MCIVITIES COOKIES BUY 2,GET 1 FREE"
                android:textColor="#3b4d55"
                android:textSize="12dp"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/offer_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/offer" />


</android.support.v7.widget.CardView>
