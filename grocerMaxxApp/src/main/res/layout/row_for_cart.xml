                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_quantity"
                        android:layout_marginTop="0dp"
                        android:layout_toRightOf="@+id/product_image">

                        <TextView
                            android:id="@+id/mrp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:singleLine="true"
                            android:text="Rs. 230"
                            android:textColor="#b22603"
                            android:textSize="16dp"
                            android:textStyle="bold" />



                        <LinearLayout
                            android:id="@+id/llplusminus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/decrease_quantity"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentBottom="true"
                                android:layout_toLeftOf="@+id/view2"
                                android:src="@drawable/minus_icon_without_shadow"
                                android:visibility="visible" />

                            <View
                                android:id="@+id/view2"
                                android:layout_width="6dp"
                                android:layout_height="2dp"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@+id/quantity"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tv_quantity"
                                android:layout_width="35dp"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_vertical"
                                android:layout_toLeftOf="@+id/view3"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="#b22603"
                                android:textSize="16dp" />

                            <View
                                android:id="@+id/view3"
                                android:layout_width="6dp"
                                android:layout_height="2dp"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@+id/increase_quantity"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/increase_quantity"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentBottom="true"
                                android:layout_toLeftOf="@+id/add_cart_prod_list"
                                android:contentDescription=""
                                android:src="@drawable/add_icon_without_shadow"
                                android:visibility="visible" />

                        </LinearLayout>

