<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <include
        android:id="@+id/header"
        layout="@layout/mart_header_2" />

    <LinearLayout
        android:id="@+id/create_address_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:padding="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_create_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Address"
            android:textAllCaps="true"
            android:textColor="@color/pallete_black"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/sv_create_address_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_address_heading"
        android:layout_above="@+id/button_create_address"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="8dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <!---        START         -->



            <RelativeLayout
                android:id="@+id/rl_first_names"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="First Name"
                        android:textColor="@color/pallete_black"
                        android:textSize="@dimen/text_size_12" />

                    <EditText
                        android:id="@+id/edit_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="required"
                        android:singleLine="true"
                        android:textColorHint="@color/register_address_text_unselected_color"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/register_address_line_color"
                        android:visibility="visible" />

                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_last_names"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Last Name"
                        android:textColor="@color/pallete_black"
                        android:textSize="@dimen/text_size_12" />

                    <EditText
                        android:id="@+id/edit_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="required"
                        android:singleLine="true"
                        android:textColorHint="@color/register_address_text_unselected_color"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/register_address_line_color"
                        android:visibility="visible" />

                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_house_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_house_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="House No"
                        android:textColor="@color/pallete_black"
                        android:textSize="@dimen/text_size_12" />

                    <EditText
                        android:id="@+id/edit_house_no"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="required"
                        android:singleLine="true"
                        android:textColorHint="@color/register_address_text_unselected_color"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/register_address_line_color"
                        android:visibility="visible" />

                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textColor="@color/pallete_black"
                        android:textSize="@dimen/text_size_12" />

                    <EditText
                        android:id="@+id/edit_location"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="required"
                        android:singleLine="true"
                        android:textColorHint="@color/register_address_text_unselected_color"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/register_address_line_color"
                        android:visibility="visible" />

                </LinearLayout>

            </RelativeLayout>











            <RelativeLayout
                android:id="@+id/rl_location_spinner_shipping"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="7dp" >

                <TextView
                    android:id="@+id/txt_location_spinner_shipping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textColor="@color/pallete_black"
                    android:textSize="@dimen/text_size_12" />


                <Spinner
                    android:id="@+id/spinner_location_shipping"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/txt_location_spinner_shipping"
                    android:background="@drawable/spi"
                    android:gravity="center_vertical"
                    android:layout_toLeftOf="@+id/iv_location_spinner_shipping"
                    />

                <ImageView
                    android:id="@+id/iv_location_spinner_shipping"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:paddingRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/txt_location_spinner_shipping"
                    android:background="@drawable/spi"
                    android:src="@drawable/drop_down" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/spinner_location_shipping"
                    android:background="@color/register_address_line_color"
                    android:visibility="visible" />

            </RelativeLayout>














            <RelativeLayout
                android:id="@+id/rl_landmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_landmark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Landmark"
                        android:textColor="@color/pallete_black"
                        android:textSize="@dimen/text_size_12" />

                    <EditText
                        android:id="@+id/edit_landmark"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="required"
                        android:singleLine="true"
                        android:textColorHint="@color/register_address_text_unselected_color"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/register_address_line_color"
                        android:visibility="visible" />

                </LinearLayout>

            </RelativeLayout>








            <RelativeLayout
                android:id="@+id/rl_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="City"
                        android:textColor="@color/pallete_black"
                        android:textSize="@dimen/text_size_12" />

                    <EditText
                        android:id="@+id/edit_city"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="required"
                        android:singleLine="true"
                        android:textColor="@color/pallete_black"
                        android:textColorHint="@color/light_Gray"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/register_address_line_color"
                        android:visibility="visible" />

                </LinearLayout>


                <TextView
                    android:layout_width="2dp"
                    android:layout_height="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="38dp"
                    android:background="@color/register_address_line_color" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="State"
                        android:textColor="@color/pallete_black"
                        android:textSize="@dimen/text_size_12" />

                    <EditText
                        android:id="@+id/edit_state"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="required"
                        android:singleLine="true"
                        android:textColor="@color/pallete_black"
                        android:textColorHint="@color/light_Gray"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/register_address_line_color"
                        android:visibility="visible" />

                </LinearLayout>


                <TextView
                    android:layout_width="2dp"
                    android:layout_height="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="38dp"
                    android:background="@color/register_address_line_color" />

            </RelativeLayout>




            <RelativeLayout
                android:id="@+id/rl_state_spinner"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="7dp" >

                <TextView
                    android:id="@+id/txt_state_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="State"
                    android:textColor="@color/pallete_black"
                    android:textSize="@dimen/text_size_12" />


                <Spinner
                    android:id="@+id/spinner_billing"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/txt_state_spinner"
                    android:background="@drawable/spi"
                    android:gravity="center_vertical"
                    android:layout_toLeftOf="@+id/iv_spinner"
                     />

                <ImageView
                    android:id="@+id/iv_spinner"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:paddingRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/txt_state_spinner"
                    android:background="@drawable/spi"
                    android:src="@drawable/drop_down" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/spinner_billing"
                    android:background="@color/register_address_line_color"
                    android:visibility="visible" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_pincode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pin Code"
                        android:textColor="@color/pallete_black"
                        android:textSize="@dimen/text_size_12" />

                    <EditText
                        android:id="@+id/edit_pincode"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="required"
                        android:singleLine="true"
                        android:numeric="integer"
                        android:maxLength="6"
                        android:textColor="@color/pallete_black"
                        android:textColorHint="@color/light_Gray"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/register_address_line_color"
                        android:visibility="visible" />

                </LinearLayout>


                <TextView
                    android:layout_width="2dp"
                    android:layout_height="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="38dp"
                    android:background="@color/register_address_line_color" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:textColor="@color/pallete_black"
                        android:textSize="@dimen/text_size_12" />

                    <EditText
                        android:id="@+id/edit_phone"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:maxLength="10"
                        android:numeric="integer"
                        android:hint="required"
                        android:singleLine="true"
                        android:textColor="@color/pallete_black"
                        android:textColorHint="@color/light_Gray"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/register_address_line_color"
                        android:visibility="visible" />

                </LinearLayout>

                <TextView
                    android:layout_width="2dp"
                    android:layout_height="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="38dp"
                    android:background="@color/register_address_line_color" />

            </RelativeLayout>

            <!--                       END                 -->

            <LinearLayout
                android:id="@+id/cb_billing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cb_iv_billing"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/chkbox_unselected" />

                <TextView
                    android:id="@+id/cb_tv_billing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="@string/makeitdefaultaddress"
                    android:textColor="@color/pallete_black"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cb_shipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cb_iv_shipping"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/chkbox_unselected" />

                <TextView
                    android:id="@+id/cb_tv_shipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="@string/makeitmydefaultshipping"
                    android:textColor="@color/pallete_black"
                    android:textSize="@dimen/text_size_14" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/check_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:text="@string/makeitdefaultaddress"
                android:textColor="@color/pallete_black"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/check_default_shipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="@string/makeitmydefaultshipping"
                android:textColor="@color/pallete_black"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/button_create_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/create_address_btn_border"
        android:text="Save"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16" />

    <include
        android:id="@+id/footer"
        layout="@layout/mart_footer"
        android:visibility="gone" />

</RelativeLayout>
