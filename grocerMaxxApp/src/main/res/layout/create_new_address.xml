<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <include
        android:id="@+id/header"
        layout="@layout/mart_header_2" />

    <LinearLayout
        android:id="@+id/create_address_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:padding="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_create_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Address"
            android:textAllCaps="true"
            android:textColor="@color/pallete_black"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/sv_create_address_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_address_heading"
        android:layout_above="@+id/button_create_address"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="8dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <RelativeLayout
                android:id="@+id/rl_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/left_line_first_name_new_addr"
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="38dp"
                    android:background="@color/register_address_selected_line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="2dp"
                    android:paddingTop="5dp">

                    <EditText
                        android:id="@+id/edit_first_name_new_addr"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="FIRST NAME*"
                        android:paddingTop="10dp"
                        android:singleLine="true"
                        android:textColorHint="@color/register_address_text_unselected_color"
                        android:textSize="@dimen/text_size_12">

                        <requestFocus />
                    </EditText>


                </LinearLayout>

                <TextView
                    android:id="@+id/middle_line_first_name_new_addr"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="42dp"
                    android:layout_toRightOf="@+id/tv"
                    android:background="@color/register_address_selected_line_color" />

                <TextView
                    android:id="@+id/right_line_first_name_new_addr"
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="38dp"
                    android:background="@color/register_address_selected_line_color" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/left_line_last_name_new_addr"
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="38dp"
                    android:background="@color/register_address_line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="2dp"
                    android:paddingTop="5dp">

                    <EditText
                        android:id="@+id/edit_last_name_new_addr"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="LAST NAME"
                        android:paddingTop="10dp"
                        android:singleLine="true"
                        android:textColorHint="@color/register_address_text_unselected_color"
                        android:textSize="@dimen/text_size_12" />

                </LinearLayout>

                <TextView
                    android:id="@+id/middle_line_last_name_new_addr"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="42dp"
                    android:layout_toRightOf="@+id/tv"
                    android:background="@color/register_address_line_color" />

                <TextView
                    android:id="@+id/right_line_last_name_new_addr"
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="38dp"
                    android:background="@color/register_address_line_color" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_address_name_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <TextView
                    android:id="@+id/left_line_address_name_new_addr"
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="38dp"
                    android:background="@color/register_address_line_color"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_address_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address name"
                        android:textColor="@color/pallete_black"
                        android:textSize="@dimen/text_size_12" />

                    <EditText
                        android:id="@+id/edit_address_name_new_addr"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="required"
                        android:singleLine="true"
                        android:textColorHint="@color/register_address_text_unselected_color"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/middle_line_address_name_new_addr"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/register_address_line_color"
                        android:visibility="visible" />

                </LinearLayout>


                <TextView
                    android:id="@+id/right_line_address_name_new_addr"
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="38dp"
                    android:background="@color/register_address_line_color"
                    android:visibility="gone" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_city_new_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <TextView
                    android:id="@+id/left_line_city_new_addr"
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="38dp"
                    android:background="@color/register_address_line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="City"
                        android:textColor="@color/pallete_black"
                        android:textSize="@dimen/text_size_12" />

                    <EditText
                        android:id="@+id/edit_city_new_addr"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="required"
                        android:singleLine="true"
                        android:textColor="@color/pallete_black"
                        android:textColorHint="@color/light_Gray"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/middle_line_address_name_new_addr"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/register_address_line_color"
                        android:visibility="visible" />

                </LinearLayout>


                <TextView
                    android:id="@+id/right_line_city_new_addr"
                    android:layout_width="2dp"
                    android:layout_height="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="38dp"
                    android:background="@color/register_address_line_color" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/left_line_state_new_addr"
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="38dp"
                    android:background="@color/register_address_line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="2dp"
                    android:paddingTop="5dp">

                    <EditText
                        android:id="@+id/edit_state_new_addr"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Haryana"
                        android:paddingTop="10dp"
                        android:singleLine="true"
                        android:textColor="@color/headmultiplepage"
                        android:textColorHint="@color/headmultiplepage"
                        android:textSize="@dimen/text_size_12" />

                </LinearLayout>

                <TextView
                    android:id="@+id/middle_line_state_new_addr"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="42dp"
                    android:layout_toRightOf="@+id/tv"
                    android:background="@color/register_address_line_color" />

                <TextView
                    android:id="@+id/right_line_state_new_addr"
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="38dp"
                    android:background="@color/register_address_line_color" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_mobileno_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/left_line_mobileno_new_addr"
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="38dp"
                    android:background="@color/register_address_line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="2dp"
                    android:paddingTop="5dp">

                    <EditText
                        android:id="@+id/edit_mobileno_new_addr"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="MOBILE NO*"
                        android:maxLength="10"
                        android:numeric="integer"
                        android:paddingTop="10dp"
                        android:singleLine="true"
                        android:textColorHint="@color/register_address_text_unselected_color"
                        android:textSize="@dimen/text_size_12" />

                </LinearLayout>

                <TextView
                    android:id="@+id/middle_line_mobileno_new_addr"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="42dp"
                    android:layout_toRightOf="@+id/tv"
                    android:background="@color/register_address_line_color" />

                <TextView
                    android:id="@+id/right_line_mobileno_new_addr"
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="38dp"
                    android:background="@color/register_address_line_color" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/flat_new_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <TextView
                    android:id="@+id/left_line_flat_new_addr"
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="38dp"
                    android:background="@color/register_address_line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_flat_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Flat No."
                        android:textColor="@color/pallete_black"
                        android:textSize="@dimen/text_size_12" />

                    <EditText
                        android:id="@+id/edit_flat_new_addr"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="required"
                        android:singleLine="true"
                        android:textColorHint="@color/register_address_text_unselected_color"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/middle_line_address_name_new_addr"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/register_address_line_color"
                        android:visibility="visible" />

                </LinearLayout>


                <TextView
                    android:id="@+id/right_line_flat_new_addr"
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="38dp"
                    android:background="@color/register_address_line_color" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/location_new_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/left_line_location_new_addr"
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="38dp"
                    android:background="@color/register_address_line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textColor="@color/pallete_black"
                        android:textSize="@dimen/text_size_12" />

                    <EditText
                        android:id="@+id/edit_location_new_addr"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="required"
                        android:singleLine="true"
                        android:textColorHint="@color/register_address_text_unselected_color"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/middle_line_address_name_new_addr"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/register_address_line_color"
                        android:visibility="visible" />

                </LinearLayout>


                <TextView
                    android:id="@+id/right_line_location_new_addr"
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="38dp"
                    android:background="@color/register_address_line_color" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/landmark_new_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/left_line_landmark_new_addr"
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="38dp"
                    android:background="@color/register_address_line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_closest_landmark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Closest landmark"
                        android:textColor="@color/pallete_black"
                        android:textSize="@dimen/text_size_12" />

                    <EditText
                        android:id="@+id/edit_landmark_new_addr"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="required"
                        android:singleLine="true"
                        android:textColorHint="@color/register_address_text_unselected_color"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/middle_line_address_name_new_addr"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/register_address_line_color"
                        android:visibility="visible" />

                </LinearLayout>


                <TextView
                    android:id="@+id/right_line_landmark_new_addr"
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="38dp"
                    android:background="@color/register_address_line_color" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/pincode_new_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/left_line_pincode_new_addr"
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="38dp"
                    android:background="@color/register_address_line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_pincode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pincode"
                        android:textColor="@color/pallete_black"
                        android:textSize="@dimen/text_size_12" />

                    <EditText
                        android:id="@+id/edit_pincode_new_addr"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:ems="10"
                        android:hint="required"
                        android:maxLength="6"
                        android:numeric="integer"
                        android:singleLine="true"
                        android:textColorHint="@color/register_address_text_unselected_color"
                        android:textSize="@dimen/text_size_14">

                    </EditText>

                    <TextView
                        android:id="@+id/middle_line_address_name_new_addr"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/register_address_line_color"
                        android:visibility="visible" />

                </LinearLayout>

                <TextView
                    android:id="@+id/right_line_pincode_new_addr"
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="38dp"
                    android:background="@color/register_address_line_color" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/cb_billing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cb_iv_billing"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/chkbox_unselected" />

                <TextView
                    android:id="@+id/cb_tv_billing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="@string/makeitdefaultaddress"
                    android:textColor="@color/pallete_black"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cb_shipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cb_iv_shipping"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/chkbox_unselected" />

                <TextView
                    android:id="@+id/cb_tv_shipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="@string/makeitmydefaultshipping"
                    android:textColor="@color/pallete_black"
                    android:textSize="@dimen/text_size_14" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/check_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:text="@string/makeitdefaultaddress"
                android:textColor="@color/pallete_black"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/check_default_shipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="@string/makeitmydefaultshipping"
                android:textColor="@color/pallete_black"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/button_create_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/create_address_btn_border"
        android:text="Save"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16" />

    <include
        android:id="@+id/footer"
        layout="@layout/mart_footer"
        android:visibility="gone" />

</RelativeLayout>
