<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_main_cat"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="-4dp"
        android:layout_marginBottom="-4dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/cat_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/cat_dairy" />


    </LinearLayout>
        <TextView
            android:id="@+id/cat_name_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="abhishek"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/white"

            android:layout_margin="5dp"
            android:visibility="visible"

            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/ll_cat_main_selected"
        android:visibility="gone">

        <View
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="@color/accentColor"></View>

        <TextView
            android:id="@+id/cat_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="abhishek"
            android:gravity="center"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/white"

            android:layout_margin="5dp"
            android:visibility="visible"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="@color/accentColor"></View>
    </LinearLayout>
    <ImageView
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-6dp"
        android:layout_gravity="center"

        android:visibility="gone"
        android:src="@drawable/category_indicator" />


    </RelativeLayout>
</LinearLayout>
