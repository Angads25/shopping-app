<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical" >

    <include
        android:id="@+id/header"
        layout="@layout/mart_header" />

    <TextView
        android:id="@+id/CreditCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="3dp"
        android:text="Payment Method"
        android:textColor="@color/app_header"
        android:textSize="@dimen/text_size_16" />

    

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="4"
        android:background="@color/white"
        android:layout_margin="5dp" >	
        
        <TextView 
            android:id="@+id/tv_choose_to_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose how you'd like to pay"
            android:textColor="#121212"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:paddingBottom="5dp"
            android:textSize="@dimen/text_size_14" />
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="vertical" >
            
               <LinearLayout 
                   android:id="@+id/ll_online_payment"
                   android:layout_width="match_parent" 
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:orientation="horizontal" >
        
               <ImageView 
                   android:id="@+id/iv_online_payment"
                   android:layout_width="39dp"
                   android:layout_height="39dp"
                   android:gravity="center"
                   android:src="@drawable/cb_unchecked" />
               
               <Button 
                   android:id="@+id/btn_online_Payment"
                   android:layout_width="match_parent"
                   android:layout_height="39dp"
                   android:text="Online Payment"
                   android:gravity="left"
                   android:textColor="@color/payment_unselected_text_color"
                   android:textSize="@dimen/text_size_13"
                   android:background="@drawable/pay_unselected_btn" />
                              
                </LinearLayout>
            
            <LinearLayout 
                  android:id="@+id/ll_cash_on_delivery"
                  android:layout_width="match_parent" 
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="10dp"
                  android:layout_gravity="center_horizontal"
                  android:orientation="horizontal" >
       
              <ImageView 
                   android:id="@+id/iv_cash_on_delivery"
                   android:layout_width="39dp"
                   android:layout_height="39dp"
                   android:gravity="center"
                   android:src="@drawable/cb_unchecked" />
               
               <Button 
                   android:id="@+id/btn_cash_on_delivery"
                   android:layout_width="match_parent"
                   android:layout_height="39dp"
                   android:text="Cash on Delivery/Sodexo"
                   android:textColor="@color/payment_unselected_text_color"
                   android:textSize="@dimen/text_size_13"
                   android:gravity="left"
                   android:background="@drawable/pay_unselected_btn" />
              
               </LinearLayout>
            
           <LinearLayout 
                  android:id="@+id/ll_paytm"
                  android:layout_width="match_parent" 
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginBottom="10dp"
                  android:visibility="gone"
                  android:layout_gravity="center_horizontal"
                  android:orientation="horizontal"  >
     
            <ImageView 
                   android:id="@+id/iv_paytm"
                   android:layout_width="39dp"
                   android:layout_height="39dp"
                   android:gravity="center"
                   android:src="@drawable/cb_unchecked" />
               
               <Button 
                   android:id="@+id/btn_paytm"
                   android:layout_width="match_parent"
                   android:layout_height="39dp"
                   android:text="PayTM"
                   android:textColor="@color/payment_unselected_text_color"
                   android:textSize="@dimen/text_size_13"
                   android:gravity="left"
                   android:background="@drawable/pay_unselected_btn" />
            
             </LinearLayout>
             
           
           <LinearLayout 
                  android:id="@+id/ll_mobikwik"
                  android:layout_width="match_parent" 
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:visibility="gone"
                  android:layout_gravity="center_horizontal"
                  android:orientation="horizontal"  >
     
            <ImageView 
                   android:id="@+id/iv_mobikwik"
                   android:layout_width="39dp"
                   android:layout_height="39dp"
                   android:gravity="center"
                   android:src="@drawable/cb_unchecked" />
               
               <Button 
                   android:id="@+id/btn_mobikwik"
                   android:layout_width="match_parent"
                   android:layout_height="39dp"
                   android:text="MobiKwik"
                   android:textColor="@color/payment_unselected_text_color"
                   android:textSize="@dimen/text_size_13"
                   android:gravity="left"
                   android:background="@drawable/pay_unselected_btn" />
            
             </LinearLayout>
            
            
        </LinearLayout>
        
    </LinearLayout>
    
     <LinearLayout
        android:id="@+id/ll_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f3faff"
        android:orientation="vertical"
        android:visibility="visible" >
    
    <LinearLayout
        android:id="@+id/ll_total"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f3faff"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_subtotal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Sub Total"
                android:textColor="#565758"
                android:paddingTop="7dp"
                android:paddingBottom="5dp"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_subTotal_payment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="18dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text=""
                android:paddingBottom="5dp"
                android:textSize="@dimen/text_size_14"
                android:textColor="#565758" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_discount_review"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Discount"
                android:textColor="#565758"
                android:paddingBottom="5dp"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_discount_review"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="18dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text=""
                android:paddingBottom="5dp"
                android:textSize="@dimen/text_size_14"
                android:textColor="#565758" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_shipping"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_shipping"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Shipping Charges"
                android:textColor="#565758"
                android:paddingBottom="8dp"
                android:textSize="@dimen/text_size_14"
                />

            <TextView
                android:id="@+id/tv_shipping_payment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="18dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text=""
                android:paddingBottom="5dp"
                android:textSize="@dimen/text_size_14"
                android:textColor="#565758" />
        </LinearLayout>
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_you_pay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="You Pay"
                android:textSize="@dimen/text_size_17"
                android:textColor="#454545" />

            <TextView
                android:id="@+id/tv_you_pay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="18dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text=""
                android:textSize="@dimen/text_size_17"
                android:textColor="#e5390e" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/ll_discount"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:orientation="horizontal" >

            <RelativeLayout 
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:id="@+id/view_bg_color"
                android:background="#ffd800"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp">  
               
                <TextView
	                android:id="@+id/txt_you_saved"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="You Saved"
	                android:layout_marginLeft="7dp"
	                android:layout_centerVertical="true"
	                android:textSize="@dimen/text_size_14"
	                android:textColor="#454545" />
                
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_you_saved"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="18dp"
                android:layout_weight="1"
                android:text=""
                android:gravity="right|bottom"
                android:textSize="@dimen/text_size_14"
                android:textColor="#454545" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="11dp"
            android:background="#ffd800" />

       
    </LinearLayout>

    <include
        android:id="@+id/load_more_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        layout="@layout/footer_progress_dialog"
        android:visibility="gone" />


    <Button
        android:id="@+id/button_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/pay_btn_border"
        android:padding="14dp"
        android:text="PAY"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/white" />

    <include
        android:id="@+id/footer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone"
        layout="@layout/mart_footer" />
    
     </LinearLayout>

</LinearLayout>
