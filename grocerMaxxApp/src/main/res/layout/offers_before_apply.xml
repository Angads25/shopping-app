<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical" >

    <include
        android:id="@+id/header"
        layout="@layout/mart_header" />
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/app_background"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/white"
                android:textSize="@dimen/text_size_13"
                android:text="AVAIL OFFERS" />
            
            <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:padding="10dp"
	            android:layout_marginLeft="10dp"
	            android:textColor="@color/black"
	            android:textSize="@dimen/text_size_13"
	            android:text="APPLY COUPON CODE" />
            
             <TextView 
                 	android:id="@+id/tv_enter_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Code" 
                    android:background="@color/white"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="10dp"
       				android:layout_marginRight="10dp"
                    android:textSize="@dimen/text_size_12" />
           
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="10dp"
        		android:layout_marginRight="10dp"
                android:background="@color/white" >
                
                

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <RelativeLayout 
               android:id="@+id/rl_first_name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="8dp"
               android:layout_marginRight="10dp"
               android:visibility="visible" >
                 
              
                <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:gravity="center_vertical"
		            android:orientation="horizontal"
		            android:paddingLeft="2dp"
		            android:paddingBottom="5dp"
		             >
	            
                <EditText
                    android:id="@+id/edit_coupon_code"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:background="@null"
                    android:textColorHint="@color/register_address_text_unselected_color"
                    android:hint=""
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_12">
                      <requestFocus />
                    </EditText>
                
        </LinearLayout>
               
               <TextView 
                   android:id="@+id/middle_line_coupon"
                   android:layout_width="match_parent"
	               android:layout_height="1dp"
	               android:layout_marginTop="38dp"
	               android:layout_toRightOf="@+id/tv"
	               android:background="@color/register_address_selected_line_color" />
               
           		</RelativeLayout>
           
        	</LinearLayout>	
                

        </LinearLayout>
        
            
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ORDER SUMMARY"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textSize="@dimen/text_size_12" />
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:background="@color/white" >
        
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:weightSum="2" >
                    
                    <TextView 
                        android:id="@+id/txt_item_count"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_size_12"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="1 item" />
                    
                    <TextView 
                        android:id="@+id/tv_item_count"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_size_12"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="Rs. 15" />
                    
                </LinearLayout>
                
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:weightSum="2" >
                    
                    <TextView 
                        android:id="@+id/txt_subtotal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_size_12"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="Sub total:" />
                    
                    <TextView 
                        android:id="@+id/tv_subtotal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_size_12"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="Rs. 15" />
                    
                </LinearLayout>
                
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:weightSum="2" >
                    
                    <TextView 
                        android:id="@+id/txt_shipping_charges"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_size_12"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="Shipping Charges:" />
                    
                    <TextView 
                        android:id="@+id/tv_shipping_charges"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_size_12"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="Rs. 15" />
                    
                </LinearLayout>
                
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:weightSum="2" >
                    
                    <TextView 
                        android:id="@+id/txt_you_saved"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_size_12"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="You Saved" />
                    
                    <TextView 
                        android:id="@+id/tv_you_saved"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_size_12"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="Rs. 15" />
                    
                </LinearLayout>
                
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:weightSum="2" >

                    <TextView
                        android:id="@+id/txt_total"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="Total"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12" />
                    
                    <TextView 
                        android:id="@+id/tv_total"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_size_12"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/black"
                        android:text="Rs. 15" />
                    
                </LinearLayout>
                
            </LinearLayout>
            
        </LinearLayout>
        
        
        
    </ScrollView>
    
    <LinearLayout 
            android:id="@+id/ll_second_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:weightSum="2" >
    
    <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:weightSum="2" >
         
         <Button 
             android:id="@+id/btn_remove_code"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:background="@color/gray_1"
             android:padding="15dp"
             android:text="Remove Code" />
         
         <Button 
             android:id="@+id/btn_pay"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:background="#175ed4"
             android:padding="15dp"
             android:textColor="@color/white"
             android:text="Pay" />
         
         </LinearLayout>
         
    </LinearLayout>
    
      <LinearLayout 
            android:id="@+id/ll_first_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:weightSum="2" >
        
          <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:weightSum="2" >
              
            <Button 
	             android:id="@+id/btn_apply_coupon"
	             android:layout_width="match_parent"
	             android:layout_height="wrap_content"
	             android:layout_weight="1"
	             android:background="@color/gray_1"
	             android:padding="15dp"
	             android:text="Apply Coupon" />
	         
	         <Button 
	             android:id="@+id/btn_apply_code"
	             android:layout_width="match_parent"
	             android:layout_height="wrap_content"
	             android:layout_weight="1"
	             android:background="#175ed4"
	             android:padding="15dp"
	             android:textColor="@color/white"
	             android:text="Pay" />
              
          </LinearLayout>
         
     </LinearLayout>
    
    
    <include
        android:id="@+id/footer"
        android:visibility="gone"
        layout="@layout/mart_footer" />

    </RelativeLayout>
    
</LinearLayout>
