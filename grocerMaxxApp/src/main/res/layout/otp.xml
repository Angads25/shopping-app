<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<include
        android:id="@+id/header"
        layout="@layout/mart_header" />-->
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/primaryColor"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/icon_header_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/carat_left_white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Enter OTP"
            android:textColor="@color/white"
            android:textSize="@dimen/mart_header_text_size"
            android:gravity="left|center_vertical"
            android:paddingLeft="5dp"
            android:id="@+id/tv" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="Please enter the one time password(OTP) sent to "
        android:textSize="@dimen/text_size_16" />

    <EditText
        android:id="@+id/et_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_18"
        android:gravity="center"
        android:hint="Enter One Time Password"
        android:textColorHint="@color/register_address_text_unselected_color"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/black"
        android:inputType="number"
        android:layout_marginTop="20dp" />


    <TextView
        android:id="@+id/tv_waitMsg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Waiting automatically to detect OTP"
        android:textSize="@dimen/text_size_16" />
    <ProgressBar
        android:id="@+id/progressBar1"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminate="false"
        android:max="60"
        android:visibility="gone"
        android:progressDrawable="@drawable/style_horizontal"
        android:secondaryProgress="10" />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/progressBar1"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text=""
        android:visibility="gone"
        android:textAppearance="?android:attr/textAppearanceSmall" />


    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="SUBMIT"
        android:background="@drawable/create_address_btn_border"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"/>

    <Button
        android:id="@+id/btn_resendOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="RESEND OTP"
        android:background="@drawable/create_address_btn_border"
        android:textColor="@color/white"
        android:visibility="gone"
        android:textSize="@dimen/text_size_16"/>

    <TextView
        android:id="@+id/tv_suggesion"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:text="Please enter correct mobile no. as OTP will be sent to it."
        android:textSize="@dimen/text_size_16" />

</LinearLayout>