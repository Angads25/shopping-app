                 android:textSize="@dimen/text_size_11" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/rl_addr_name">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abhishek Yadav"
                android:textColor="@color/pallete_black"
                android:layout_below="@+id/rl_addr_name"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5, Nathupur Road"
                android:layout_below="@+id/name"
                android:textColor="@color/pallete_black"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/address1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:maxLines="3"
                android:lineSpacingExtra="3dp"
                android:paddingRight="10dp"
                android:textColor="#727272"
                android:textSize="@dimen/text_size_12" />
            <LinearLayout
                android:id="@+id/ll_edit_address"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right|bottom"
                android:visibility="visible"
                android:paddingBottom="2dp">

                <ImageView
                    android:id="@+id/img_edit_address"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/edit_gray"
                    android:visibility="visible"/>
            </LinearLayout>

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="India"
                android:visibility="gone"
