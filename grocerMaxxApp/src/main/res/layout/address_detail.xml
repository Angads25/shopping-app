<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/layout_address_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:padding="8dp"
        >

        <RelativeLayout
            android:id="@+id/rl_addr_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            >

            <TextView
                android:id="@+id/text_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Name"
                android:textColor="@color/light_Gray"
                android:layout_toLeftOf="@+id/editaddress"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/text_size_12"  />

            <ImageView
                android:id="@+id/editaddress"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/deleteAddress"
                android:layout_centerVertical="true"
                android:src="@drawable/edit_address"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/deleteAddress"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/delete_icon"
                android:layout_centerVertical="true"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/iv_cb_checkout"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/chkbox_unselected"
                android:visibility="gone"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

