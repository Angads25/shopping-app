<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    android:orientation="vertical" >

    <include
        android:id="@+id/header"
        layout="@layout/mart_header" />

    <TextView 
        android:id="@+id/order_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="7dp"
        android:text="abhishek"
        android:layout_marginBottom="3dp"
        android:textColor="@color/app_header"
        android:textSize="@dimen/text_size_16" />
    
    <TextView
        android:id="@+id/msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >
            
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal" >
                
                <TextView
                    android:id="@+id/txt_about_order"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Order Date"
                    android:layout_marginLeft="7dp"
                    android:textColor="@color/register_address_text_unselected_color"
                    android:textSize="@dimen/text_size_14" />
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />

                <TextView
                    android:id="@+id/tv_about_order"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/headmultiplepage"
                    android:textSize="@dimen/text_size_14"/>
                
            </LinearLayout>
            
           
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal" >
                
                <TextView
                    android:id="@+id/txt_delivery_date"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Delivery Date"
                    android:layout_marginLeft="7dp"
                    android:textColor="@color/register_address_text_unselected_color"
                    android:textSize="@dimen/text_size_14" />
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />

                <TextView
                    android:id="@+id/tv_delivery_date"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/headmultiplepage"
                    android:textSize="@dimen/text_size_14"/>
                
            </LinearLayout>
            
            
			<LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal" >
                
                <TextView
                    android:id="@+id/txt_delivery_time"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Delivery Time"
                    android:layout_marginLeft="7dp"
                    android:textColor="@color/register_address_text_unselected_color"
                    android:textSize="@dimen/text_size_14" />
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />

                <TextView
                    android:id="@+id/tv_delivery_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/headmultiplepage"
                    android:textSize="@dimen/text_size_14"/>
                
            </LinearLayout>
            
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal" >
                
                <TextView
                    android:id="@+id/txt_shipping_address"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Shipping Address"
                    android:layout_marginLeft="7dp"
                    android:textColor="@color/register_address_text_unselected_color"
                    android:textSize="@dimen/text_size_14" />
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />

                <TextView
                    android:id="@+id/tv_shipping_address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/headmultiplepage"
                    android:textSize="@dimen/text_size_14"/>
                
            </LinearLayout>
            
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal" >
                
                <TextView
                    android:id="@+id/txt_billing_address"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Billing Address"
                    
                    android:layout_marginLeft="7dp"
                    android:textColor="@color/register_address_text_unselected_color"
                    android:textSize="@dimen/text_size_14" />
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />

                <TextView
                    android:id="@+id/tv_billing_address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/headmultiplepage"
                    android:textSize="@dimen/text_size_14"/>
                
            </LinearLayout>
            
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal" >
                
                <TextView
                    android:id="@+id/txt_shipping_method"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Shipping Method"
                    android:layout_marginLeft="7dp"
                    android:textColor="@color/register_address_text_unselected_color"
                    android:textSize="@dimen/text_size_14" />
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />

                <TextView
                    android:id="@+id/tv_shipping_method"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/headmultiplepage"
                    android:textSize="@dimen/text_size_14"/>
                
            </LinearLayout>
            
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal" >
                
                <TextView
                    android:id="@+id/txt_payment_mode"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Payment Method"
                    android:layout_marginLeft="7dp"
                    android:textColor="@color/register_address_text_unselected_color"
                    android:textSize="@dimen/text_size_14" />
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />

                <TextView
                    android:id="@+id/tv_payment_mode"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/headmultiplepage"
                    android:textSize="@dimen/text_size_14"/>
                
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_header"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#d7d7d7"
                android:paddingLeft="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical|left"
                    android:text="Product Name"
                    android:textColor="@color/headmultiplepage" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Price"
                    android:textColor="@color/headmultiplepage" />

                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="Qty"
                    android:textColor="@color/headmultiplepage" />

                <TextView
                    android:id="@+id/tv_subtotal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Sub Total"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/headmultiplepage" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_product_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:background="#d7d7d7"
                android:orientation="vertical" >
            </LinearLayout>
            
           
        <LinearLayout
            android:id="@+id/ll_subtotal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_subtotal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Sub Total"
                android:textColor="#565758"
                android:paddingTop="7dp"
                android:paddingBottom="5dp"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_subtotal_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="18dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text=""
                android:textSize="@dimen/text_size_14"
                android:textColor="#565758" />
        </LinearLayout>
            
  
        <LinearLayout
            android:id="@+id/ll_shipping"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_shipping"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Shipping Charges"
                android:textColor="#565758"
                android:textSize="@dimen/text_size_14"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tv_shipping"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="18dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text=""
                android:textSize="@dimen/text_size_14"
                android:textColor="#565758" />
        </LinearLayout>
            
            <LinearLayout
                android:id="@+id/ll_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="right"
                android:gravity="right|center_vertical"
                android:visibility="gone"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discount : "
                     android:gravity="right|center_vertical"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_discount"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text=" "
                     android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:textColor="#000000" />
            </LinearLayout>

	<LinearLayout
            android:id="@+id/ll_youpay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_grand_total"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="You Pay"
                android:textSize="@dimen/text_size_17"
                android:textColor="#454545" />

            <TextView
                android:id="@+id/tv_youpay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="18dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text=""
                android:textSize="@dimen/text_size_17"
                android:textColor="#e5390e" />
        </LinearLayout>
          
        </LinearLayout>
    </ScrollView>

</LinearLayout>
